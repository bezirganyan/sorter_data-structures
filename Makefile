CC=g++
CFLAGS=-c -Wall -g
LDFLAGS=
SOURCES=main.cpp sorter.cpp
OBJECTS=$(SOURCES:.cpp=.o)
	EXECUTABLE=demo

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CC) $(LDFLAGS) $(OBJECTS) -o $@

.cpp.o:
	$(CC) $(CFLAGS) $< -o $@

clean:
	rm $(OBJECTS) demo
